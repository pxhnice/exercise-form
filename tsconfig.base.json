{
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue"
  ],
  "exclude": ["**/__tests__/**", "**/tests/**", "**/dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "vite/client"]
  }
}
